{
	"name": "metemotion",
	"private": true,
	"version": "0.0.0",
	"engines": {
		"node": ">=22.0.0",
		"pnpm": ">=9.0.0"
	},
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "tsc -b && vite build",
		"lint": "eslint ./src/**/*.{ts,tsx} --fix",
		"format:commit": "prettier $(git diff --cached --name-only --diff-filter=ACMR | sed 's| |\\ |g') --write --ignore-unknown",
		"preview": "vite preview",
		"prepare": "husky",
		"lighthouse:ci": "lhci autorun",
		"test:a11y": "playwright test --grep @a11y",
		"report:a11y": "node scripts/generate-a11y-report.ts",
		"a11y": "pnpm run test:a11y && pnpm run report:a11y"
	},
	"dependencies": {
		"@radix-ui/react-slot": "^1.2.3",
		"@tailwindcss/vite": "^4.1.8",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.514.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss": "^4.1.8"
	},
	"devDependencies": {
		"@eslint/js": "^9.25.0",
		"@playwright/test": "^1.53.2",
		"@types/node": "^24.0.0",
		"@types/react": "^19.1.2",
		"@types/react-dom": "^19.1.2",
		"@vitejs/plugin-react": "^4.4.1",
		"axe-html-reporter": "^2.2.11",
		"axe-playwright": "^2.1.0",
		"eslint": "^9.25.0",
		"eslint-plugin-react-hooks": "^5.2.0",
		"eslint-plugin-react-refresh": "^0.4.19",
		"globals": "^16.0.0",
		"husky": "^9.1.7",
		"prettier": "3.5.3",
		"tw-animate-css": "^1.3.4",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.30.1",
		"vite": "^6.3.5"
	}
}
